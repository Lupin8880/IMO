<div class="container">
  <div class="wrapper col-md-8 col-md-offset-2 col-sm-10">
    <p><%= notice %></p>
    <h1>All Sinnabus</h1>
      <%= link_to "Create Cinnabus", new_cinnabar_path, class: 'btn btn-default' %>
    <% @cinnabars.each do |cinnabar| %>
    <div class="row">
      <h4><strong><%= cinnabar.title %></strong></h4>
      <p><%= cinnabar.content %></p>
      <%= link_to "Edit", edit_cinnabar_path(cinnabar.id), class: 'btn btn-default btn-sm btn-success' %>
      <%= link_to "Delete", cinnabar_path(cinnabar.id), method: :delete, data: { confirm: 'Do you really edit?'}, class: 'btn btn-default btn-sm btn btn-danger' %>
    </div>
    <% end %>
  </div>
</div>