<%= form_for(@cinnabar, url: choose_new_or_edit) do |f| %>
  <% if @cinnabar.errors.any? %>
    <div id="error_explanation">
      <h2>There are <%= @cinnabar.errors.count %> errors.</h2>

      <ul>
      <% @cinnabar.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.label :content %>
  <%= f.text_field :content, class: 'form-control' %>
  <br>
  <%= f.submit 'Submit', class: 'btn btn-primary btn-block' %>
<% end %>

<%= link_to "Return to All Cinnabus", cinnabars_path %>